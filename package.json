{
  "name": "curatr-app",
  "version": "0.10.0",
  "description": "Track media file quality, playback compatibility, and maintenance status for Plex libraries",
  "author": "Lou-i3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:Lou-i3/curatr-app.git"
  },
  "homepage": "https://github.com/Lou-i3/curatr-app",
  "bugs": {
    "url": "https://github.com/Lou-i3/curatr-app/issues"
  },
  "keywords": [
    "plex",
    "media",
    "quality",
    "tracker",
    "nextjs",
    "prisma",
    "files",
    "self-hosted"
  ],
  "private": true,
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "scripts": {
    "dev": "npm run build:worker && npm run build:openapi && next dev",
    "build": "npm run build:worker && npm run build:openapi && next build",
    "build:openapi": "node scripts/generate-openapi.mjs",
    "build:worker": "esbuild src/lib/tasks/task-worker.ts --bundle --platform=node --target=node24 --outfile=src/lib/tasks/task-worker.js --external:@prisma/client --external:@prisma/adapter-better-sqlite3",
    "postinstall": "prisma generate",
    "start": "next start"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "swagger-ui-react": "^5.31.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/swagger-ui-react": "^5.18.0",
    "esbuild": "^0.27.3",
    "prisma": "^7.3.0",
    "swagger-jsdoc": "^6.2.8",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
